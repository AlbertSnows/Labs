import java.util.*; 


public class Lab5{
	public static void main(String[] args){
		Scanner keyboard = new Scanner(System.in); 
		String password; 
		String confirmPassword; 
		String stringLetter; 

		
		int digit; 
		
		int countSpecials; 
		int indexExit = 0;
		
		char letter; 
		char[] specialChars = {'!', '@', '#', '$', '*', }; 
		//***if (Arrays.asList(item1, item2, item3).contains(string))
				
		boolean exitWhile = false;
		boolean hasSpecial = false; 
		boolean isSpecial = false; 
		boolean hasEight = false; 
		boolean hasDigit = false; 
		
		int checkValid = 0; 
		boolean isValid = false; 
		
while (exitWhile != true){

		System.out.println("Type in a password. \nIt must meet the following conditions:"
				+ "\nIt must be a minimum of 8 characters."); 
		System.out.println("It must contain one of these characters: !, @, #, $, or *"); 
		System.out.println("It must also contain at least one digit.");
		System.out.println("Enter a '/' to exit the program. Do not use a '/' in your password.");
		System.out.print("Type your password here: "); 
