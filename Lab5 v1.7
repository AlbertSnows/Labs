			System.out.println("Goodbye!"); 
			System.exit(0);
		}
		
		for (checkValid = 0; checkValid < password.length(); checkValid++)
			{
				letter = password.charAt(checkValid); 			
				for(countSpecials = 0; countSpecials < specialChars.length; countSpecials++){
					if (letter == specialChars[countSpecials]){
						System.out.println(); 
							 isSpecial = true; 
						}
				}
				
				if (isSpecial == true){
					System.out.println("This letter is a special character!");
					isSpecial = false; 
				}
				else if (Character.isLetter(letter)){
					System.out.println("Regular character: " + letter);
				}
				else {
					stringLetter = Character.toString(letter); 
					digit = Integer.parseInt(stringLetter); 
					System.out.println("Digit: " + digit);
					hasDigit = true; 
				}
				
				switch (letter){
				case '!':
					System.out.println("Special Character: " + letter);
					hasSpecial = true; 
					break; 
				case '@': 
					System.out.println("Special Character: " + letter);
					hasSpecial = true; 
					break; 
				case '#': 
					System.out.println("Special Character: " + letter);
					hasSpecial = true; 
					break; 
				case '$':
					System.out.println("Special Character: " + letter);
					hasSpecial = true; 
					break; 
				case '*': 
					System.out.println("Special Character: " + letter);
					hasSpecial = true; 
					break; 
				default: 
					break; 
					
				}//end switch statement
			}//end for loop
		
	
