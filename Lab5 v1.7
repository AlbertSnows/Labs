			System.out.println("Make sure your password is at least 8 characters long!"); 
	
		} //password must be at least 8 characters
		else { hasEight = true; }

		if(hasSpecial == true && hasEight == true && hasDigit == true){ isValid = true;}
		if (isValid == true){
			System.out.print("That's a valid password! Please re-enter it for confrimation"); 
			confirmPassword = keyboard.nextLine(); 
			if (password.equals(confirmPassword)){
